<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#575757"
    android:backgroundTint="#575757"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_above="@id/button_layout"
        android:layout_margin="20dp"/>


    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#434343"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="#FF5722"
                android:text="C"
                android:textSize="32dp"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_del"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="\u232b"
                android:textSize="25dp"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_operator"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="+/-"
                android:textSize="25dp"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="39dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="22dp"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="39dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="X"
                android:textSize="20dp"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="39dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtract"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24dp"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="39dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="22dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_decimal"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="24dp"
                app:backgroundTint="#52D677"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sum"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="24dp"
                app:backgroundTint="#000000"
                app:cornerRadius="39dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add"
                style="@style/ThemeOverlay.Material3.FloatingActionButton.Primary"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="24dp"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="39dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>